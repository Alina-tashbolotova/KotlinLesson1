<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin20" />

    <TextView
        android:id="@+id/txt_push"
        android:layout_marginTop="@dimen/margin20"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:textSize="@dimen/texSize"
        android:textColor="@color/black"
        android:layout_below="@id/editText"
        android:paddingStart="@dimen/padding15"
        android:layout_height="@dimen/edittext45dp"/>



    <Button
        android:id="@+id/buttonPush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_push"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/check_btn_top"
        android:text="@string/to_push" />


</RelativeLayout>