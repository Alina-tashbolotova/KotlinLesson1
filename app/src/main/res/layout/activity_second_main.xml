<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/txt_second"
        android:layout_marginTop="@dimen/edittext45dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:text="@string/alina"
        android:textSize="@dimen/texSize"
        android:textColor="@color/black"
        android:paddingStart="@dimen/padding15"
        android:layout_height="@dimen/edittext45dp"/>

    <Button
        android:id="@+id/btnSecondPush"
        android:layout_marginTop="@dimen/check_btn_top"
        android:layout_centerInParent="true"
        android:layout_below="@id/txt_second"
        android:layout_width="wrap_content"
        android:text="@string/to_push"
        android:layout_height="wrap_content"/>

</RelativeLayout>